@model BuecherListModel

<h2>Buecher aus den Datenbanktabellen:</h2>

@*Erstellen der Liste mit den Aktuellen Buechern*@
<div style="width:45%; display: inline-block">
    <h3>Aktuelle Buecher</h3>
    <table class="table table-hover mb-0">

    <thead>
        <tr>
            <td>Titel</td>
            <td>Autor</td>
            <td>Verschieben in andere Tabelle</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var buch in Model.AktuelleBuecherList)
        {
            <tr>
                <td>
                    @buch.Titel
                </td>
                <td>
                    @buch.Autor
                </td>
                <td>
                    @Html.ActionLink("Verschieben", "VerschiebeNachArchiviert", "Buecher", buch)
                </td>
            </tr>
        }
    </tbody>

    </table>
</div>

